@model IEnumerable<GraniteHouse.Models.SpecialTags>
@{
    ViewData["Title"] = "Index";
}

<br />

<div class="row">
    <div class="col-md-6">
        <h3 class="text-info">Special Tag</h3>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp;New Special Tag</a>
    </div>

</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <partial name="_TableButtonPartial" model="item.Id" />
            </tr>
        }


    </table>
</div>

